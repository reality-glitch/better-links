{
  "manifest_version": 3,
  "name": "better-links",
  "version": "0.0.1",
  "description": "Better Links",
  "author": "Ya Zhuang <zhuangya@gmail.com>",
  "permissions": [
    "declarativeNetRequest"
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "redirect_ruleset",
        "enabled": true,
        "path": "redirect.json"
      }
    ]
  },
  "host_permissions": [
    "*://link.zhihu.com/*"
  ]
}
